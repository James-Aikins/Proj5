<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:text="Order Coffee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            android:textSize="30sp" android:layout_marginBottom="68dp"
            app:layout_constraintBottom_toTopOf="@+id/coffeeList" android:layout_marginEnd="120dp"
            android:layout_marginRight="120dp" app:layout_constraintEnd_toEndOf="parent"/>
    <ListView
            android:layout_width="209dp"
            android:layout_height="283dp"
            android:id="@+id/coffeeList" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="184dp"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Confirm Order"
            android:layout_width="100dp"
            android:layout_height="wrap_content" android:id="@+id/orderCoffee"
            android:layout_marginEnd="48dp"
            android:layout_marginRight="48dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/coffeeList"/>
    <TextView
            android:text="Quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/whippedCream"
            android:layout_marginTop="16dp" app:layout_constraintEnd_toStartOf="@+id/coffeeList"
            android:layout_marginEnd="104dp" android:layout_marginRight="104dp"/>
    <TextView
            android:text="Size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView6"
            app:layout_constraintBottom_toTopOf="@+id/sizeSpinner" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp"/>
    <CheckBox
            android:text="Sugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/sugar"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/cream" app:layout_constraintEnd_toStartOf="@id/coffeeList"
            android:layout_marginEnd="88dp" android:layout_marginRight="88dp"/>
    <CheckBox
            android:text="Cream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/cream"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/sizeSpinner" app:layout_constraintEnd_toStartOf="@id/coffeeList"
            android:layout_marginEnd="84dp" android:layout_marginRight="84dp"/>
    <Button
            android:text="Add Coffee"
            android:layout_width="100dp"
            android:layout_height="wrap_content" android:id="@+id/addCoffee"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/numCoffees" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp"/>
    <Spinner
            android:layout_width="57dp"
            android:layout_height="25dp" android:id="@+id/numCoffees"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="8dp"/>
    <Spinner
            android:layout_width="134dp"
            android:layout_height="0dp" android:id="@+id/sizeSpinner"
            app:layout_constraintEnd_toStartOf="@id/coffeeList"
            android:layout_marginEnd="24dp" android:layout_marginRight="24dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="228dp"/>
    <CheckBox
            android:text="Whipped Cream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/whippedCream"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/sugar" app:layout_constraintEnd_toStartOf="@id/coffeeList"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>