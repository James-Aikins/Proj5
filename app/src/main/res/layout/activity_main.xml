<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/donut_shop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.174" android:id="@+id/textView" android:textSize="36sp"/>
    <Button
            android:text="@string/current_order"
            android:layout_width="100dp"
            android:layout_height="wrap_content" android:id="@+id/openCurr"
            app:layout_constraintEnd_toStartOf="@+id/openStoreOrder"
            android:layout_marginEnd="4dp" android:layout_marginRight="4dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="50dp" android:layout_marginStart="50dp" android:layout_marginTop="51dp"
            app:layout_constraintTop_toBottomOf="@+id/openDonuts"/>
    <Button
            android:text="@string/store_order"
            android:layout_width="100dp"
            android:layout_height="wrap_content" android:id="@+id/openStoreOrder"
            android:layout_marginLeft="116dp" android:layout_marginStart="116dp"
            app:layout_constraintStart_toEndOf="@+id/openCurr" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="123dp"/>
    <Button
            android:text="@string/order_coffee"
            android:layout_width="100dp"
            android:layout_height="wrap_content" android:id="@+id/openCoffee"
            android:layout_marginLeft="116dp" android:layout_marginStart="116dp"
            app:layout_constraintStart_toEndOf="@+id/openDonuts" android:layout_marginBottom="52dp"
            app:layout_constraintBottom_toTopOf="@+id/openStoreOrder"/>
    <Button
            android:text="@string/order_donuts"
            android:layout_width="100dp"
            android:layout_height="wrap_content" android:id="@+id/openDonuts"
            android:layout_marginTop="279dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="50dp" android:layout_marginStart="50dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>