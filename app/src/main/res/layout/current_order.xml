<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:id="@+id/constraintLayout">

    <ListView
            android:layout_width="320dp"
            android:layout_height="325dp"
            android:id="@+id/orderList" android:visibility="visible"
            tools:visibility="visible" app:layout_constraintBottom_toTopOf="@+id/subtotalNumber"
            android:layout_marginBottom="32dp" app:layout_constraintEnd_toEndOf="@+id/remove"
            android:layout_marginEnd="4dp" android:layout_marginRight="4dp"/>
    <TextView
            android:text="tax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tax"
            app:layout_constraintEnd_toStartOf="@+id/taxNumber" android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="140dp"/>
    <TextView
            android:text="total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/total"
            app:layout_constraintEnd_toStartOf="@+id/totalNumber" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" app:layout_constraintTop_toBottomOf="@+id/tax"
            android:layout_marginTop="32dp"/>
    <TextView
            android:text="Current Order"
            android:layout_width="92dp"
            android:layout_height="23dp" android:id="@+id/currentOrderText"
            app:layout_constraintBottom_toTopOf="@+id/orderList"
            android:layout_marginBottom="24dp" app:layout_constraintEnd_toEndOf="@+id/remove"
            android:layout_marginEnd="112dp" android:layout_marginRight="112dp"/>
    <EditText
            android:layout_width="61dp"
            android:layout_height="36dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/subtotalNumber"
            app:layout_constraintBottom_toTopOf="@+id/tax"
            android:layout_marginBottom="40dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="112dp" android:layout_marginStart="112dp"/>
    <TextView
            android:text="subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/subtotal"
            app:layout_constraintEnd_toStartOf="@+id/subtotalNumber" android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp" app:layout_constraintBottom_toTopOf="@+id/tax"
            android:layout_marginBottom="32dp"/>
    <EditText
            android:layout_width="64dp"
            android:layout_height="43dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/totalNumber"
            app:layout_constraintEnd_toStartOf="@+id/remove" android:layout_marginEnd="104dp"
            android:layout_marginRight="104dp" app:layout_constraintTop_toBottomOf="@+id/subtotalNumber"
            android:layout_marginTop="68dp"/>
    <EditText
            android:layout_width="59dp"
            android:layout_height="38dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/taxNumber"
            app:layout_constraintBottom_toTopOf="@+id/totalNumber"
            android:layout_marginBottom="4dp" app:layout_constraintStart_toEndOf="@+id/subtotal"
            android:layout_marginLeft="12dp" android:layout_marginStart="12dp"/>
    <Button
            android:text="remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/remove"
            app:layout_constraintStart_toEndOf="@+id/taxNumber"
            android:layout_marginLeft="112dp" android:layout_marginStart="112dp"
            app:layout_constraintTop_toBottomOf="@+id/orderList" android:layout_marginTop="64dp"/>
    <ImageButton
            android:layout_width="69dp"
            android:layout_height="55dp" app:srcCompat="@drawable/abc_vector_test"
            android:id="@+id/imageButton2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>