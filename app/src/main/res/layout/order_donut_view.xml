<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:background="#00000000">

    <Spinner
            android:layout_width="79dp"
            android:layout_height="27dp" android:id="@+id/quantSpinner"
            app:layout_constraintStart_toEndOf="@id/flavorsList"
            android:layout_marginLeft="56dp" android:layout_marginStart="56dp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <TextView
            android:text="Order Donuts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            android:textSize="30sp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="116dp" android:layout_marginStart="116dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ListView
            android:layout_width="203dp"
            android:layout_height="300dp" android:layout_marginTop="128dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:id="@+id/flavorsList"/>
    <TextView
            android:text="Quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            android:textSize="18sp" android:layout_marginLeft="56dp" android:layout_marginStart="56dp"
            app:layout_constraintStart_toEndOf="@+id/flavorsList" android:layout_marginTop="128dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <Button
            android:text="Order Donuts"
            android:layout_width="100dp"
            android:layout_height="wrap_content" android:id="@+id/orderDonuts"
            app:layout_constraintStart_toEndOf="@id/flavorsList" android:layout_marginLeft="56dp"
            android:layout_marginStart="56dp" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/addDonuts"/>
    <Button
            android:text="Add Donuts"
            android:layout_width="100dp"
            android:layout_height="wrap_content" android:id="@+id/addDonuts"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/quantSpinner"
            app:layout_constraintStart_toEndOf="@+id/flavorsList"
            android:layout_marginLeft="56dp" android:layout_marginStart="56dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>