<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:background="#00000000">

    <ListView
            android:layout_width="180dp"
            android:layout_height="300dp" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:id="@+id/flavorsList">
    </ListView>
    <TextView
            android:text="Order Donuts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            android:textSize="30sp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="116dp" android:layout_marginStart="116dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.107"/>
    <Button
            android:text="Add Donuts"
            android:layout_width="100dp"
            android:layout_height="wrap_content" android:id="@+id/addDonuts"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/flavorsList" app:layout_constraintEnd_toStartOf="@+id/removeDonut"
            android:layout_marginEnd="88dp" android:layout_marginRight="88dp"/>
    <Button
            android:text="Order Donuts"
            android:layout_width="100dp"
            android:layout_height="wrap_content" android:id="@+id/orderDonuts"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/removeDonut" android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/flavorsList" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <Spinner
            android:layout_width="66dp"
            android:layout_height="23dp" android:id="@+id/quantSpinner"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <ListView
            android:layout_width="180dp"
            android:layout_height="300dp" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/flavorsList"
            android:id="@+id/donutList" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <Button
            android:text="Remove Donut"
            android:layout_width="100dp"
            android:layout_height="wrap_content" android:id="@+id/removeDonut"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/donutList" android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp" app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>